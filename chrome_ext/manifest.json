{
  "name": "Component Tagger",
  "version": "1.0",
  "description": "Tag components on a webpage",
  "icons": { "128": "icon_128.png" },

  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_icon": {
      "8": "icon_128.png___",
      "16": "icon_128.png",
      "32": "icon_128.png",
      "48": "icon_128.png",
      "128": "icon_128.png"
    }
  },
  "background": {
    "persistent": true,
    "scripts": ["contextMenus.js"]
  },
  "permissions": ["activeTab", "storage", "contextMenus"],
  "manifest_version": 2
}
